@page
@model pkmnWildLife.Pages.characters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].TeraType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].HP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].MaxHP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].TempMaxHP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Grit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].MaxGrit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Character) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeraType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempMaxHP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxGrit)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
