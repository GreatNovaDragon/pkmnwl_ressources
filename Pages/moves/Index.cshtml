@page
@using Westwind.AspNetCore.Markdown
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table id="movedex" class="display">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            DMG
        </th>
        <th>
            Type
        </th>
        <th>
            Effect
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Move.Where(m => m.type.Name != "Shadow"))
    {
        <tr>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ID">  @Html.Raw($"{item.Name} / {item.Name_DE}")</a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DamageDice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type.Name)
            </td>
            <td>
                @Html.Raw(Markdown.Parse(item.Effect))
            </td>
        </tr>
    }
    </tbody>
</table>


@section Scripts {
    <script>
    $(document).ready(function () {
        $('#movedex').DataTable({
         "order": []
        });
    });
    </script>
}