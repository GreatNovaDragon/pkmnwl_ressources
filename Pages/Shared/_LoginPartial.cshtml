@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="w3-bar-item  w3-mobile w3-right">Hallo @User.Identity?.Name!</a>

    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
        <button class="w3-bar-item w3-button w3-mobile w3-right" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="w3-bar-item w3-button w3-mobile w3-right" asp-area="Identity" asp-page="/Account/Login">Login</a>
}