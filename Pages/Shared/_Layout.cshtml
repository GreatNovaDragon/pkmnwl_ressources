<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - pkmnWildLife</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/progressbar.css">
    <link rel="stylesheet" href="/icons/style.css"/>

    <script
        src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
        crossorigin="anonymous"></script>
    <link href="https://cdn.datatables.net/v/bs5/dt-2.0.2/datatables.min.css" rel="stylesheet">

    <script src="https://cdn.datatables.net/v/bs5/dt-2.0.2/datatables.min.js"></script>

</head>
<body>

<nav style="background: @ViewData["HeaderColor"]" class="navbar navbar-expand-lg navbar-dark" >
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-page="/Index">Pokemon - Wild Life Beyond</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Regeln
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li>
                            <a asp-area="" asp-page="/rules/mainrules" class="dropdown-item">
                                Hauptregeln
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-page="/rules/charactercreation" class="dropdown-item">
                                Charakter-Erstellung
                            </a>
                        </li>
                        <li >
                            <a asp-area="" asp-page="/rules/levelup" class="dropdown-item">
                                Levelaufstieg
                            </a>
                        </li>
                        <li >
                            <a asp-area="" asp-page="/rules/destinies" class="dropdown-item">
                                Schicksale
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-page="/pokemon/Index" class="nav-link text-white">Pokédex</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-page="/moves/Index" class="nav-link text-white">AngriffsDex</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-page="/abilities/Index" class="nav-link text-white"> FähigkeitenDex</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-page="/traits/Index" class="nav-link text-white">Traits</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<header class="py-3 mb-4 border-bottom">
    <div class="container d-flex flex-wrap justify-content-center">
        <h2>@ViewData["Title"]</h2>
        
            
    </div>
</header>


    <main class="container" role="main">
        @RenderBody()
    </main>

@await RenderSectionAsync("Scripts", false)
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>